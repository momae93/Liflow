<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="post"
            type="com.example.liflow.presentation.ui.like.model.LikedPost" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_like_posts_result_constraintLayout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_like_posts_result_cardView_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/item_like_posts_result_imageView_picture"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                app:imageViewBindingAdapter="@{post.pictureUrl}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_like_posts_result_textView_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="@{post.title}"
            android:textColor="@color/colorDarkGrey"
            android:textSize="@dimen/text_size_regular"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/item_like_posts_result_textView_category"
            app:layout_constraintStart_toEndOf="@+id/item_like_posts_result_cardView_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />


        <TextView
            android:id="@+id/item_like_posts_result_textView_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/roboto"
            android:text="@{post.categoryName}"
            android:textColor="@color/colorDarkGrey"
            android:textSize="@dimen/text_size_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_like_posts_result_textView_title"
            app:layout_constraintTop_toBottomOf="@+id/item_like_posts_result_textView_title" />

        <Button
            android:id="@+id/item_like_posts_result_button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:textAllCaps="false"
            android:text="@{post.alreadyLiked ? @string/like : @string/unlike}"
            android:textColor="@{post.alreadyLiked ? @color/colorDarkGrey : @color/colorGreenMint}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>