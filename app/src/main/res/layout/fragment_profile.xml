<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.liflow.presentation.ui.profile.ProfileViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.profile.ProfileFragment">

        <TextView
            android:id="@+id/fragment_profile_textView_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/lato_bold"
            android:text="Mickael AU"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_big"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_profile_textView_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:text="Male 22 y.o."
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_textView_fullname" />

        <ImageButton
            android:id="@+id/fragment_profile_imageButton_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:src="@drawable/ic_settings"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_textView_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fragment_profile_imageView_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_textView_info"
            android:src="@drawable/ic_user" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_profile_layout_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/colorGreenMint"
            app:layout_constraintBottom_toTopOf="@+id/fragment_profile_textView_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_imageView_picture">

            <TextView
                android:id="@+id/fragment_profile_textView_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato"
                android:text="@string/fragment_profile_stats_following"
                android:textSize="@dimen/text_size_big"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/fragment_profile_textView_followers_nb"
                app:layout_constraintEnd_toStartOf="@+id/fragment_profile_textView_following"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/fragment_profile_textView_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="@string/fragment_profile_stats_following"
                android:textSize="@dimen/text_size_big"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_textView_followers"
                app:layout_constraintEnd_toStartOf="@+id/fragment_profile_textView_claps"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fragment_profile_textView_followers"
                app:layout_constraintTop_toTopOf="@+id/fragment_profile_textView_followers" />

            <TextView
                android:id="@+id/fragment_profile_textView_claps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="@string/fragment_profile_stats_claps"
                android:textSize="@dimen/text_size_big"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_textView_following"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fragment_profile_textView_following"
                app:layout_constraintTop_toTopOf="@+id/fragment_profile_textView_following" />

            <TextView
                android:id="@+id/fragment_profile_textView_followers_nb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lato"
                android:text="30"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fragment_profile_textView_followers"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/fragment_profile_textView_followers"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_textView_followers" />

            <TextView
                android:id="@+id/fragment_profile_textView_following_nb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="40"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fragment_profile_textView_following"
                app:layout_constraintStart_toStartOf="@+id/fragment_profile_textView_following"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_textView_following" />

            <TextView
                android:id="@+id/fragment_profile_textView_claps_nb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="33"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fragment_profile_textView_claps"
                app:layout_constraintStart_toStartOf="@+id/fragment_profile_textView_claps"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_textView_claps" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/fragment_profile_textView_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_regular"
            android:text="I'm Mickael ! This is my description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_layout_stats" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_profile_layout_likedPosts"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_textView_description">

            <TextView
                android:id="@+id/fragment_profile_textView_liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/fragment_profile_posts_liked"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_big"
                android:textAllCaps="true"
                app:layout_constraintBottom_toTopOf="@+id/fragment_profile_textView_likedPosts_nb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/fragment_profile_textView_likedPosts_nb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lato_bold"
                android:text="128 posmos"
                android:textColor="@color/colorGreenMint"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fragment_profile_textView_liked"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/fragment_profile_textView_liked"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_textView_liked" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/fragment_profile_view_separator"
            android:layout_width="64dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDarkGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_layout_likedPosts" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_profile_layout_writtenPosts"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_profile_view_separator">

            <TextView
                android:id="@+id/fragment_profile_textView_written"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/fragment_profile_posts_written"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_big"
                android:textAllCaps="true"
                app:layout_constraintBottom_toTopOf="@+id/fragment_profile_textView_written_nb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/fragment_profile_textView_written_nb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lato_bold"
                android:text="128 posmos"
                android:textColor="@color/colorGreenMint"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fragment_profile_textView_written"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/fragment_profile_textView_written"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_textView_written" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>